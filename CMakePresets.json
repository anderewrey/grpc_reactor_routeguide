    {
      "name": "vcpkg-clang-debug",
      "displayName": "vcpkg Clang Debug",
      "description": "Debug build using Clang with vcpkg libraries (Release libs + Debug app for Linux ABI compatibility)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-vcpkg-debug-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER_LAUNCHER": "ccache",
        "CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_CXX_STANDARD": "20",
        "VCPKG_TARGET_TRIPLET": "x64-linux-clang-release",
        "VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/vcpkg/triplets",
        "VCPKG_OVERLAY_PORTS": "${sourceDir}/vcpkg/ports"
      }
    },
